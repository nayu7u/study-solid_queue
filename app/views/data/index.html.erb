<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Data" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Data</h1>
    <%= link_to "New datum", new_datum_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="data" class="min-w-full">
    <% @data.each do |datum| %>
      <%= render datum %>
      <p>
        <%= link_to "Show this datum", datum, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
